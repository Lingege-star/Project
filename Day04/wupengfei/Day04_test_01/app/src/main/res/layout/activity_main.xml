<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <androidx.appcompat.widget.Toolbar
      android:id="@+id/tb_toolbar_main"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:title=" "
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/fl_fragment_main">
      <TextView
          android:id="@+id/tv_toolBar_main"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:textSize="20sp"
          android:layout_gravity="center"
         android:text="首页"/>
   </androidx.appcompat.widget.Toolbar>
   <FrameLayout
      android:id="@+id/fl_fragment_main"
       android:layout_width="match_parent"
       android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/tb_toolbar_main"
      app:layout_constraintBottom_toTopOf="@id/tl_tabLayout_main"/>
   <com.google.android.material.tabs.TabLayout
      android:id="@+id/tl_tabLayout_main"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/fl_fragment_main"
      app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>