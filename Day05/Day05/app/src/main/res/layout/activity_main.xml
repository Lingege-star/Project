<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">
   <LinearLayout
       android:layout_gravity="center"
       android:gravity="center"
       android:layout_width="@dimen/dp_357"
       android:layout_height="@dimen/dp_73">
       <LinearLayout
           android:background="@drawable/item_yuan"
           android:layout_width="@dimen/dp_262"
           android:layout_height="@dimen/dp_37">
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:src="@drawable/sou"
               />
           <EditText
               android:id="@+id/et_sou"
               android:layout_marginLeft="10dp"
               android:layout_width="@dimen/dp_200"
               android:layout_height="@dimen/dp_37"
               android:background="@null"
               android:hint="搜索平台诗人名字、诗歌关键词"
               android:textSize="@dimen/dp_12" />
       </LinearLayout>
        <ImageView
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/deng"/>
       <ImageView
           android:layout_marginLeft="@dimen/dp_17"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/qian"
           />
   </LinearLayout>
<androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlv"
    ></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>