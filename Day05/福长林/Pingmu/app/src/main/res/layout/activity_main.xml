<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/rela_header"
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_44">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_16"
            android:layout_centerInParent="true"
            android:text="首页"
            android:textColor="#000000" />

        <ImageView
            android:id="@+id/iv_show"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/sousuo" />
    </RelativeLayout>

    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_200"
        android:layout_below="@id/rela_header" />

    <TextView
        android:id="@+id/show_chu"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_16"
        android:layout_below="@id/banner"
        android:layout_marginLeft="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_17"
        android:text="出行必备"
        android:textColor="#000000" />

    <LinearLayout
        android:id="@+id/show_ll"
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_80"
        android:layout_below="@id/show_chu">

        <Button
            android:id="@+id/but_min"
            android:layout_width="@dimen/dp_167"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#F4CB4D"
            android:text="民宿" />

        <Button
            android:id="@+id/but_fan"
            android:layout_width="@dimen/dp_167"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_5"
            android:background="#2196F3"
            android:text="翻译" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_300"
        android:layout_below="@id/show_ll"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab"
        android:layout_width="@dimen/dp_375"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@id/recycler"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_20">


        <com.google.android.material.tabs.TabItem
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_60"
            android:icon="@drawable/home"
            android:text="首页" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_60"
            android:icon="@drawable/strategy"
            android:text="首页" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="@dimen/dp_125"
            android:layout_height="@dimen/dp_60"
            android:icon="@drawable/mine"
            android:text="首页" />


    </com.google.android.material.tabs.TabLayout>


</RelativeLayout>