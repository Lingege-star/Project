<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ServiceActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/service_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:background="#fff"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="资讯"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/service_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#00A3FC"
        app:layout_constraintTop_toBottomOf="@+id/service_toolbar">

        <ImageView
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:src="@drawable/back" />

        <ImageView
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:src="@drawable/picture_icon_close" />

    </RelativeLayout>

    <TextView
        android:id="@+id/service_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:text="传知（北京）教育科技有限公司"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_rel" />

    <ImageView
        android:id="@+id/service_tel_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:src="@drawable/btneraser"
        app:layout_constraintLeft_toLeftOf="@+id/service_text"
        app:layout_constraintTop_toBottomOf="@+id/service_text" />

    <TextView
        android:id="@+id/service_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="4001808050"
        app:layout_constraintLeft_toRightOf="@+id/service_tel_img"
        app:layout_constraintTop_toTopOf="@+id/service_tel_img" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#959595"
        app:layout_constraintLeft_toLeftOf="@+id/service_text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/service_text2" />

</androidx.constraintlayout.widget.ConstraintLayout>