<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/learn_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:background="#fff"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="我的学习"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@+id/learn_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:drawableLeft="@drawable/course_icon"
            android:paddingRight="@dimen/dp_230"
            android:text="我的课程"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/dp_60"/>
        <Button
            android:drawableLeft="@drawable/zhibo"
            android:paddingRight="@dimen/dp_230"
            android:text="我的直播"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/dp_60"/>
        <Button
            android:drawableLeft="@drawable/learn_nor"
            android:paddingRight="@dimen/dp_230"
            android:text="学习记录"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/dp_60"/>
        <Button
            android:drawableLeft="@drawable/collection_icon"
            android:paddingRight="@dimen/dp_230"
            android:text="我的收藏"
            android:paddingLeft="@dimen/dp_20"
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/dp_60"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>